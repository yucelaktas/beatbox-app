
@model BeatBox.DAL.ORM.Entity.Category

<div class="modal fade" id="UpdateCategoryModel" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 style="color:firebrick" class="modal-title">BeatBOX</h4>
            </div>
            <div class="modal-body">
                <h3 style="color:palevioletred">Güncelleme Paneli</h3>
            </div>
            <form id="InsertForm">
                <div class="col-md-offset-1">
                    <div class="form-group">
                        <input name="Name" value="@Model.Name" type="text" />
                    </div>
                    <br />
                    <div class="form-group">
                        <textarea name="Description" value="@Model.Description" rows="7" cols="100" ></textarea>
                    </div>

                    <div class="form-group">
                        <div>
                            <input id="CategoryUpdateButton" style="display:inline-block" class="btn btn-warning" type="submit" value="Güncelle" />
                            <button id="CloseCategoryModel" type="button" class="btn btn-danger" data-dismiss="modal">İptal</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




